<html>
<body>
  <div class="errors">
    <%if(errorsValidate){%>
      <ul>
      <%for(var i=0;i<errorsValidate.legnth;i++){%>
        <li><%=errorsValidate[i].param%> - <%=errorsValidate[i].msg%></li>
      <%}%>
      </ul>
    <%}%>
  </div>
  <form action="/produtos" method="post">
    <div>
      <label for="titulo">Titulo do livro</label>
      <input type="text" id="titulo" name="titulo" value="<%=product.titulo%>" placeholder="Coloque o titulo do livro aqui" />
    </div>
    <div>
      <label for="autor">Autor do livro</label>
      <input type="text" id="autor" name="autor" value="<%=product.autor%>" placeholder="Coloque o author do livro aqui" />
    </div>
    <div>
      <label for="preco">Preço do livro</label>
      <input type="text" id="preco" name="preco" value="<%=product.preco%>" placeholder="Coloque o preço do livro aqui" />
    </div>
    <input type="submit" value="Enviar"/>
  </form>
</body>
</html>
